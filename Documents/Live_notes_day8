 select * from Emp
 where SOUNDEX(ename)=SOUNDEX('smith')

 SELECT DIFFERENCE('smith','smyth')

  SELECT DIFFERENCE('coloring','colour')
  
  SELECT SUBSTRING('VIJAY',3,1)--VIJ


  SELECT STUFF('VIJAY',3,1,'rhtrhtrhtrhtrh')--VIrhtrhtrhtrhtrhAY

     SELECT REPLACE('VIJAY','Y','R')--VIJAR
	 
	 
--====================Datetime functions--------------

SELECT GETDATE()--2020-06-24 20:39:51.940

SELECT YEAR(GETDATE())--2020


SELECT MONTH(GETDATE())--06


SELECT DAY(GETDATE())--24

SELECT DATENAME(QUARTER,'10/01/2020')

SELECT DATENAME(dw,'03/25/1990')

--WAQ to to identify the last date of the given month

SELECT DATEADD(dd,2,getdate())

SELECT DATEADD(dd,-1,'03/01/2020')

SELECT EOMONTH('12/05/2020')

SELECT DATEDIFF(year,'02/25/1990',getdate())
