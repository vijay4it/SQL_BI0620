DECLARE @Email varchar(200)='    SQL'


SELECT LEN(@Email)

SELECT LTRIM(@Email)
SELECT LEN(LTRIM(@Email))


DECLARE @Email varchar(200)='    SQL'


SELECT LEN(@Email)

SELECT RTRIM(@Email)
SELECT LEN(RTRIM(@Email))

DECLARE @ename varchar(200)='SMITHSMITHSMITH'

SELECT REPLACE(@ename,'I','Y')

SELECT LOWER(@Email)
SELECT UPPER(@Email)

DECLARE @ename varchar(200)='SMITH'



SELECT REPLICATE(@ename,2)

DECLARE @ename varchar(200)='SMITH'



SELECT REVERSE(@ename)
 
